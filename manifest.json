{
    "name": "Capture Screen",
    "version": "1.0",
    "manifest_version": 2,
    "description":"Novel IT software",
    "icons":{
        "128":"images/icon-128.png",
        "48":"images/icon-48.png",
        "16":"images/icon-16.png"
    },

    "browser_action": {
        "default_icon": "images/icon-16.png",
        "default_title": "Take Screen shot"
        // "default_popup":"popup.html"
    } ,
    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

  "permissions": [
          "storage",
          "<all_urls>",
          "pageCapture",
          "unlimitedStorage",
          "notifications",
          "contextMenus",
          "desktopCapture",
          "activeTab",
          "tabs"

        ]
}